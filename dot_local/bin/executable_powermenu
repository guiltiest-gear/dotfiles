#!/bin/bash

function powermenu {
  options="Cancel\nShutdown\nRestart\nLock"
  selected=$(echo -e $options | dmenu)
  case $selected in
    "Cancel")
      return
      ;;
    "Shutdown")
      shutdown now
      ;;
    "Restart")
      reboot
      ;;
    "Lock")
      slock -m "$(fortune | cowsay)"
      ;;
    *)
      return
      ;;
  esac
}

powermenu
